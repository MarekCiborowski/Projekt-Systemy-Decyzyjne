<Window x:Class="Projekt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekt"
        mc:Ignorable="d"
        Title="MainWindow" Height="960" Width="1920">
    <Grid Name="MainGrid" Height="960" Width="1920" Background="Transparent">
        <Button Content="Load csv file" HorizontalAlignment="Left" Margin="30,10,0,0" VerticalAlignment="Top" Click="LoadFileButton_Click"/>
        <Button Content="Save csv file" HorizontalAlignment="Left" Margin="115,10,0,0" VerticalAlignment="Top" Click="SaveFileButton_Click"/>
        <DataGrid Name="dataGrid" SelectionUnit="CellOrRowHeader" CanUserSortColumns="True" ItemsSource="{Binding DataGridItems}" CellEditEnding="dataGrid_CellEditEnding" AutoGenerateColumns="True" Margin="30,74,601,226"/>
        <TextBox Name="FilePathTextBox" HorizontalAlignment="Left" Margin="231,12,0,0" VerticalAlignment="Top" Width="323" />

        <StackPanel Margin="1359,74,400,0">
            <Button Content="Change text to number" Click="ChangeTextToNumber_Click"/>
            <Button Content="Discretize column" Click="Discretize_Click"/>
        </StackPanel>
    </Grid>
</Window>
